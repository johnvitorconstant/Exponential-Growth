<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExponentialGrowth.Pages.ExerciseView"
             xmlns:local="clr-namespace:ExponentialGrowth.Models"
             Title="ExerciseView">

    <StackLayout>

        <RefreshView IsRefreshing="{Binding isRefreshing}">
            
        <CollectionView Margin="30,20,30,30"
                        ItemsSource="{Binding Exercises}">
            
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="20" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" RowSpacing="1" ColumnSpacing="1">
                        <Label Text="{Binding Name}" FontAttributes="Bold" HorizontalOptions="Start" />
                        <Label Grid.Column="1" Text="{Binding Category}" HorizontalTextAlignment="Center"/>
                        <Label Grid.Column="2" Text="{Binding MinimumLoad}" HorizontalTextAlignment="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>


        </CollectionView>
        </RefreshView>

    </StackLayout>

        
</ContentPage>

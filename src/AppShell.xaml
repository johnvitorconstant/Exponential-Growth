<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExponentialGrowth.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ExponentialGrowth"
     xmlns:pages="clr-namespace:ExponentialGrowth.Pages"
    
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Forms" Icon="dotnet_d_inverted">
        <ShellContent Title="New Day" Icon="dotnet_a.png"
        ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent Title="New Workout" Icon="dotnet_b.png"
        ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent Title="New Exercise" Icon="dotnet_c.png"
        ContentTemplate="{DataTemplate pages:ExerciseForm}"/>
    </FlyoutItem>

    <FlyoutItem Title="Views" Icon="dotnet_d_inverted">
        <ShellContent Title="View Day" Icon="dotnet_a.png"
        ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent Title="View Workout" Icon="dotnet_b.png"
        ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent Title="View Exercise" Icon="dotnet_c.png"
        ContentTemplate="{DataTemplate pages:ExerciseView}"/>
    </FlyoutItem>
    
</Shell>
